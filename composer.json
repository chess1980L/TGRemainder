{
  "name": "tg-remainder/tg-remainder",
  "description": "Telegram reminder bot: import/export Excel, schedule messages. PHP 8.2+.",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "psr/log": "^3.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-curl": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-xlswriter": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "ext-pdo_sqlite": "*"
  },
  "autoload": {
    "psr-4": {
      "TgRemainder\\": "src/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  },
  "config": {
    "platform-check": true,
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}